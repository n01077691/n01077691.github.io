<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background_dimmer"
        android:visibility="gone"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fabMargin"
        android:src="@drawable/fab_plus"
        app:backgroundTint="@color/fab"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end">


        <TextView
            android:id="@+id/AddPatientText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:elevation="6dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:text="@string/AddPatientText"
            android:background="@color/white"
            android:typeface="normal"
            android:gravity="center"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/AddPatientFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/fabMargin"
            android:layout_marginBottom="175dp"
            android:elevation="6dp"
            android:visibility="invisible"
            app:pressedTranslationZ="12dp"
            android:src="@drawable/person"
            app:backgroundTint="@color/fab1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end">


        <TextView
            android:id="@+id/AddTestText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:elevation="6dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/AddTestText"
            android:background="@color/white"
            android:layout_marginBottom="100dp"
            android:typeface="normal"
            android:visibility="invisible"
            android:gravity="center"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/AddTestFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/fabMargin"
            android:layout_marginBottom="100dp"
            android:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:src="@drawable/test"
            app:backgroundTint="@color/fab2"/>


    </LinearLayout>
</FrameLayout>